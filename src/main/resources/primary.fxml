<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.GUI.SecondaryController">
    <children>
        <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Welcome page">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="14.0" layoutY="14.0" prefHeight="337.0" prefWidth="252.0" text="Welcome to bithereum! There you can add your crypto wallets, watch them and use basic functionality" wrapText="true">
                           <font>
                              <Font size="23.0" />
                           </font></Label>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Binance">
                    <content>
                        <AnchorPane fx:id="authPane" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="14.0" layoutY="14.0" prefHeight="44.0" prefWidth="458.0" text="Let's start! Insert your binance key and secret key please">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <padding>
                              <Insets left="5.0" />
                           </padding></Label>
                                <TextField fx:id="binKeyId" layoutX="15.0" layoutY="65.0" promptText="binance key" />
                                <Button layoutX="14.0" layoutY="160.0" mnemonicParsing="false" onAction="#login" text="Add new user" />
                        <TextField fx:id="secretBinKeyId" layoutX="15.0" layoutY="108.0" promptText="secret key" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
